{
  "name": "nw-shuriken",
  "description": "A collection of components for building the http://ninjawars.net webgame.",
  "version": "0.5.0",
  "homepage": "http://ninjawars.net",
  "repository": "https://github.com/NinjaWars/nw-shuriken",
  "bugs": {
    "url": "https://github.com/BitLucid/ninjawars/issues"
  },
  "author": {
    "name": "Roy Ronalds",
    "url": "http://royronalds.com/"
  },
  "license": "MIT",
  "packageManager": "yarn@3.1.1",
  "engines": {
    "node": ">=16.13.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "core-js": "3.20.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0"
  },
  "scripts": {
    "init-project": "echo 'no-op'",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "start": "PORT=9191 react-scripts start ",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "unit-test": "env CI=true react-scripts test --env=jsdom",
    "deploy": "yarn build && surge ./build nw-shuriken.surge.sh",
    "browse": "xdg-open http://localhost:9191",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "npx eslint src/**/*.js src/**/*.jsx",
    "post-push": "CI=true && yarn unit-test --ci && yarn lint"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "yarn lint",
      "post-push": "yarn post-push"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "flow-bin": "^0.168.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1"
  }
}
